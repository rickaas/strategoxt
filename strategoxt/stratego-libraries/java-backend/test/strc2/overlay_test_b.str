module overlay-test

imports
  org.strategoxt.imp.debuggers.stratego.runtime


imports
  libstratego-lib


signature
  sorts
    AsFixTerm

  constructors
    layout : Sort
    lit    : String -> Sort
    sort   : String -> Sort
    lex    : Sort -> Sort
    prod   : List(Sort) * Sort * List(Attr) -> Prod
    appl   : Prod * List(AsFixTerm) -> AsFixTerm


overlays
  DefaultLayout = " "

  BinOp ( o ) =
    prod(
      [ sort("E")
      , layout
      , lit(o)
      , layout
      , sort("E")
      ]
    , sort("E")
    , []
    )

  BinExp ( x, l1, o, l2, y ) =
    appl(
      BinOp(o)
    , [x, l1, lit(o), l2, y]
    )

  BinExp ( x, o, y ) =
    appl(
      BinOp(o)
    , [ x
      , _DefaultLayout
      , lit(o)
      , _DefaultLayout
      , y
      ]
    )

  Add ( x, l1, l2, y ) =
    BinExp(x, l1, "+", l2, y)

  Add ( x, y ) =
    BinExp(x, "+", y)

  Var ( x ) =
    appl(
      prod(
        [lex(sort("Id"))]
      , sort("E")
      , []
      )
    , [x]
    )


strategies
  main-overlay_test_b =
    s-enter(|"strategoxt/stratego-libraries/java-backend/test/strc2/overlay_test_b.str", "main-overlay_test_b", "41,2,43,37")
    ; s-step(|"strategoxt/stratego-libraries/java-backend/test/strc2/overlay_test_b.str", "43,4,43,37")
    ; !Add(
         Var("z")
       , " "
       , " "
       , Var("a")
       )
    < s-exit(|"strategoxt/stratego-libraries/java-backend/test/strc2/overlay_test_b.str", "main-overlay_test_b", "41,2,43,37")
    + s-exit(|"strategoxt/stratego-libraries/java-backend/test/strc2/overlay_test_b.str", "main-overlay_test_b", "41,2,43,37")
      ; fail